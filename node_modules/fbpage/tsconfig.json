{
  "include": [
    "src/*"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "alwaysStrict": true,
    "downlevelIteration": true,
		"target": "es6",
		"moduleResolution": "node",
		"module": "commonjs",
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "newLine": "LF",
    "outDir": "lib",
		"rootDir": "src",
		"declaration": true
  }
}
